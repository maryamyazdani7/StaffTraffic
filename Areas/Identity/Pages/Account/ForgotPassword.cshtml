@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section class="text-center text-lg-start" style="height:100vh; display:flex; align-items: center;">

    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="/images/login.jpg" class="w-100 rounded-4 shadow-4" style="height: 540px; object-fit: cover;"
                     alt="" />
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">فراموشی کلمه عبور</h2>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="w-100 btn btn-lg btn-primary mb-4">بازنشانی کلمه عبور</button>
                            <p class="mb-4">
                                <a asp-area="Identity" asp-page="/Account/Login">ورود به حساب کاربری</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
