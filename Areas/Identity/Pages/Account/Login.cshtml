@page
@model LoginModel

<section class="text-center text-lg-start" style="height:100vh; display:flex; align-items: center;">

  <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="/images/login.jpg" class="w-100 rounded-4 shadow-4" style="height: 540px; object-fit: cover;"
                     alt="" />
            </div>
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">ورود به حساب کاربری</h2>
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-4">
                                <input asp-for="Input.PersonnelCode" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.PersonnelCode" class="form-label"></label>
                                <span asp-validation-for="Input.PersonnelCode" class="text-danger"></span>
                            </div>
                            <div class="form-floating  mb-4">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="mb-4">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="mb-4">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">ورود</button>
                            </div>
                            <div>
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">فراموشی کلمه عبور</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ثبت نام</a>
                                </p>
                            </div>
                        </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
